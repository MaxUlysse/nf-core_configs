singularity {
  cacheDir = '/data0/containers/'
  enabled = true
  runOptions = '-B /scratch:/scratch -B /shared:/shared'
}

process {
  beforeScript = 'module load singularity/3.4.2'
  executor = 'slurm'
  clusterOptions = { "-A $params.project ${params.clusterOptions ?: ''}" }
}

params {
  max_memory = 125.GB
  max_cpus = 20
  max_time = 240.h
}
